<dl class="individual-status <%= @dude.has_beard? ? ' beard ' : ' no-beard ' %>">
  <dt>
    <div class="icon"></div>
    <p><%= @dude.display_name %></p>
    <p class="edit"><a href="/edit">Edit Beard Status</a></p>
    <p><%# @dude.beard_type %></p>
  </dt>
  <dd>
    <div class="bubble left <%= @dude.printed_status.downcase %>">
      <p>
        <%= @dude.printed_status %>
      </p>
      <span class="tab">&nbsp;</span>
    </div>
  </dd>
</dl>